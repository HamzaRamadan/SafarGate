rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to write to their own folder and read from it.
    // This rule ensures that a user can only upload/access files
    // within a directory that matches their unique user ID.
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
